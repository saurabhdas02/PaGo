<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginMain">
    <pago.com.pago.CusFntTextView
        android:id="@id/txtInternet"
        android:layout_width="150pt"
        android:layout_height="15pt"
        android:layout_gravity="center_horizontal"
        android:background="@color/title_text"
        android:gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/display_banner"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="220pt"
            android:src="@drawable/pic"
            />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="110pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"/>

        <pago.com.pago.CusFntTextView
            android:id="@+id/username"
            android:layout_width="110pt"
            android:layout_height="20pt"
            android:layout_marginLeft="2pt"
            android:layout_marginStart="2pt"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="8pt"
            android:visibility="gone"/>

        <pago.com.pago.CusFntTextView
            android:id="@+id/email_id"
            android:layout_width="110pt"
            android:layout_height="20pt"
            android:layout_marginLeft="2pt"
            android:layout_marginStart="2pt"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="8pt"
            android:visibility="gone"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="110pt"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_logout_from_google"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_revoke_access"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_revoke_access"
            android:visibility="gone" />

        <pago.com.pago.CusFntTextView
            android:id="@+id/skip_login"
            android:layout_width="110pt"
            android:layout_height="20pt"
            android:layout_marginLeft="2pt"
            android:layout_marginStart="2pt"
            android:layout_marginBottom="5pt"
            android:background="@color/button_border_color"
            android:text="Skip"
            android:layout_gravity="center"
            android:visibility="gone"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>