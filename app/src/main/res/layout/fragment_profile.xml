<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pago.com.pago.profile.controller.ProfileFragment"
    android:padding="8dp"
    android:background="@color/background_gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/profileicon"/>

            <pago.com.pago.CusFntTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:id="@+id/userEmail"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:padding="8dp"/>

            <pago.com.pago.CusFntTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Name"
                android:id="@+id/Name"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:padding="8dp"/>

            <pago.com.pago.CusFntTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gender"
                android:id="@+id/userGender"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:padding="8dp"/>

            <!--<pago.com.pago.CusFntTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date Of Birth"
                android:id="@+id/userBirthday"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:padding="8dp"/>-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date Of Birth"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:padding="8dp"
                android:editable="false"
                android:id="@id/date_of_birth_edit_text"/>

            <pago.com.pago.CusFntTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="City"
                android:id="@+id/userCity"
                android:gravity="center"
                android:textColor="@color/dark_text_color"
                android:background="@drawable/settings_buttons_bg"
                android:visibility="gone"
                android:padding="8dp"/>

            <pago.com.pago.CusFntTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_layout"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:padding="8dp"
                android:id="@id/signup_button"
                android:visibility="gone"
                android:layout_alignParentLeft="true"/>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:visibility="gone"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
